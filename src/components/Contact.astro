---
// お問い合わせ セクション / Contact Section
---

<section class="contact" id="contact">
	<div class="container">
		<!-- お問い合わせ タイトル / Contact Title -->
		<div class="section-header">
			<h2 class="section-title">お問い合わせ</h2>
			<div class="header-line"></div>
		</div>

		<div class="contact-content">
			<!-- お問い合わせ フォーム / Contact Form -->
			<div class="contact-form">
				<form>
					<div class="form-group">
						<input 
							type="text" 
							placeholder="お名前" 
							required
						/>
					</div>
					<div class="form-group">
						<input 
							type="email" 
							placeholder="メールアドレス" 
							required
						/>
					</div>
					<div class="form-group">
						<textarea 
							placeholder="メッセージ" 
							rows="5"
							required
						></textarea>
					</div>
					<button type="submit" class="submit-btn">送信</button>
				</form>
			</div>

			<!-- 連絡先情報 / Contact Information -->
			<div class="contact-info">
				<h3>連絡先</h3>
				
				<div class="contact-item">
					<h4>メール</h4>
					<p>
						<a href="mailto:hello@iktahana.com">
							hello@iktahana.com
						</a>
					</p>
				</div>

				<div class="contact-item">
					<h4>X (Twitter)</h4>
					<p>
						<a href="https://twitter.com" target="_blank" rel="noopener noreferrer">
							@iktahana
						</a>
					</p>
				</div>

				<div class="contact-item">
					<h4>Weibo</h4>
					<p>
						<a href="https://weibo.com" target="_blank" rel="noopener noreferrer">
							iktahana
						</a>
					</p>
				</div>

				<div class="contact-item">
					<h4>Instagram</h4>
					<p>
						<a href="https://instagram.com" target="_blank" rel="noopener noreferrer">
							iktahana
						</a>
					</p>
				</div>

				<!-- ニュースレター / Newsletter Signup -->
				<div class="newsletter">
					<h4>ニュースレター</h4>
					<p>最新の作品をお知らせします</p>
					<form class="newsletter-form">
						<input 
							type="email" 
							placeholder="メールアドレス"
							required
						/>
						<button type="submit">→</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
