---
// お問い合わせ セクション / Contact Section
---

<section class="contact" id="contact">
	<div class="container">
		<div class="social-icons">
			<a href="https://x.com/iktahana" target="_blank" rel="noopener noreferrer" class="social-link">
				<img src="/social-icons/x-iktahana.min.svg" alt="X" />
			</a>
			<a href="https://note.com/iktahana" target="_blank" rel="noopener noreferrer" class="social-link">
				<img src="/social-icons/note.min.svg" alt="Note" />
			</a>
		</div>
	</div>
</section>

<style>
	.social-icons {
		display: flex;
		gap: 2rem;
		justify-content: center;
		align-items: center;
		margin: 2rem 0;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		height: 3rem;
		border-radius: 8px;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		opacity: 0.8;
		transform: translateY(-4px);
	}

	.social-link img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	@media (max-width: 768px) {
		.social-icons {
			gap: 1.5rem;
		}

		.social-link {
			width: 45px;
			height: 45px;
		}
	}
</style>
