---
// プロフィール セクション / About Author Section
import Biography from "../../posts/biography.mdx";
---

<section class="about" id="about">
  <div class="container">
    <!-- プロフィール タイトル / About Title -->
    <div class="section-header">
      <h2 class="section-title">略歴</h2>
      <div class="header-line"></div>
    </div>

    <div class="about-content">
      <!-- プロフィール 本文 / About Content -->
      <div class="about-text">
        <Biography />
      </div>

      <div class="about-image">
        <div class="avatar-placeholder">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <circle
              cx="100"
              cy="60"
              r="35"
              fill="none"
              stroke="#2c2c2c"
              stroke-width="1.5"></circle>
            <path
              d="M 50 120 Q 100 100 150 120 L 150 180 Q 100 200 50 180 Z"
              fill="none"
              stroke="#2c2c2c"
              stroke-width="1.5"></path>
            <circle cx="85" cy="50" r="3" fill="#2c2c2c"></circle>
            <circle cx="115" cy="50" r="3" fill="#2c2c2c"></circle>
            <path
              d="M 95 65 Q 100 70 105 65"
              stroke="#2c2c2c"
              stroke-width="1.5"
              fill="none"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
